---
import dataJson from "../../data.json";
---

<div
  class="relative grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3 text-color"
>
  {
    Object.entries(dataJson.skills).map(([category, skillsArray]) => (
      <div class="my-4 flex flex-col gap-2">
        <h3 class="text-xl font-semibold capitalize">{category}</h3>
        <div class="flex flex-col border-l border-gray-400 ml-3">
          {skillsArray.map((skill) => (
            <span class="px-6 py-1">{skill}</span>
          ))}
        </div>
      </div>
    ))
  }
</div>
